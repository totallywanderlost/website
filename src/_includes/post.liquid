<article class="post">
  <header>
    <h1><a href="{{ include.post.url }}">{{ include.post.title }}</a></h2>

    <p class="post-author">
      <img loading="lazy" class="author-image" src="{{ include.post.author | avatar_url: width:30, height:30 }}">By {{ include.post.author }} on {{ include.post.date | date_to_string }}
    </p>

    {% if include.post.featured_image %}
    <a href="{{ include.post.url }}">
      {% if include.featured_image %}
      <img loading="lazy" class="image thumbnail" width=250 height=250 src="{{ include.post.featured_image | photo_url: width: 250, height: 250 }}">
      {% endif %}
    </a>
    {% endif %}
  </header>

  {% if include.summary %}
  <div class="summary">
    <p>{{ post.summary }}..</p>

    <a href="{{ include.post.url }}">Read More</a>
  </div>
  {% else %}
  {{ include.post.content }}
  {% endif %}
</article>
